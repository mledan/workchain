# ==================== SERVER ====================
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# ==================== DATABASE ====================
DATABASE_URL=postgresql://user:password@localhost:5432/workchain

# ==================== AUTHENTICATION ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# ==================== PAYMENT GATEWAYS ====================

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # sandbox or live

# Braintree (for Venmo)
BRAINTREE_MERCHANT_ID=your_merchant_id
BRAINTREE_PUBLIC_KEY=your_public_key
BRAINTREE_PRIVATE_KEY=your_private_key
BRAINTREE_ENVIRONMENT=sandbox  # sandbox or production

# ==================== INTEGRATIONS ====================

# GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Jira
JIRA_API_TOKEN=your_jira_api_token
JIRA_USER_EMAIL=your-email@example.com

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Microsoft Teams
TEAMS_CLIENT_ID=your_teams_client_id
TEAMS_CLIENT_SECRET=your_teams_client_secret
TEAMS_TENANT_ID=your_tenant_id

# Figma
FIGMA_ACCESS_TOKEN=your_figma_access_token

# ==================== REDIS (Optional) ====================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================== EMAIL (Future) ====================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=noreply@workchain.io

# ==================== AWS S3 (For file uploads) ====================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=workchain-uploads

# ==================== PLATFORM SETTINGS ====================
PLATFORM_FEE_RATE=0.10  # 10%
MIN_PROJECT_AMOUNT=10
MAX_PROJECT_AMOUNT=50000
ESCROW_HOLD_PERIOD=24  # hours

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ==================== LOGGING ====================
LOG_LEVEL=debug  # debug, info, warn, error
LOG_FILE=logs/workchain.log

# ==================== FEATURE FLAGS ====================
ENABLE_CRYPTO_PAYMENTS=false
ENABLE_AI_MATCHING=false
ENABLE_REAL_BLOCKCHAIN=false
BLOCKCHAIN_NETWORK=polygon-testnet  # polygon-testnet or polygon-mainnet
